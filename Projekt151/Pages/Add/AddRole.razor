@using Projekt151.Model
@page "/addrole"
@inject NavigationManager NavigationManager
@inject Services.IRoleService RoleService

<h2>Create Role</h2>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@role.RoleName" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateRole" value="Save" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code { 
    Role role = new Role();

    protected async Task CreateRole()
    {
        await RoleService.CreateRole(role);
        NavigationManager.NavigateTo("listroles");
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("listroles");
    } }     