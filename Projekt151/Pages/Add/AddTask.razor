@using Projekt151.Model
@page "/addtask"
@inject NavigationManager NavigationManager
@inject Services.ITasksService TaskService

<h2>Create Task</h2>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@task.TaskName" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Beschreibung</label>
                <input for="Name" class="form-control" @bind="@task.Beschreibung" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateTask" value="Save" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code { 
    Tasks task = new Tasks();

    protected async Task CreateTask()
    {
        await TaskService.CreateTask(task);
        NavigationManager.NavigateTo("listtasks");
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("listtasks");
    }
}     